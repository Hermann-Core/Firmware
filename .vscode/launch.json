    "version": "0.2.0",
    "configurations": [
      {
        "name": "JLink Debug",
        "request": "launch",
        "type": "cortex-debug",
        "cwd": "${workspaceFolder}",
        "executable": "${workspaceFolder}/bin/debug/bootloader.out",
        "loadFiles": [
          "${workspaceFolder}/bin/debug/bootloader.hex",
          "${workspaceFolder}/bin/debug/application.hex"
        ],
        "symbolFiles": [
          {"file": "${workspaceFolder}/bin/debug/bootloader.out"},
          {"file": "${workspaceFolder}/bin/debug/application.out"}
        ],
        "servertype": "jlink",
        "runToEntryPoint": "main",
        "device": "STM32F303VC",
        "showDevDebugOutput": "raw",
        "liveWatch": {
          "enabled": true,
          "samplesPerSecond": 4
        },
        "rttConfig": {
          "enabled": true,
          "address": "auto",
          "decoders": [
              {
                  "label": "",
                  "port": 0,
                  "type": "console",
                  "iencoding": "utf8",
              }
          ]
        },
        "swoConfig": {
          "enabled": true,
          "source": "probe",
          "cpuFrequency": 72000000,
          "swoFrequency": 2250000,
          "decoders": [
              {
                  "label": "",
                  "port": 0,
                  "type": "console",
                  "encoding": "utf8",
              }
          ],
        },
        "postLaunchCommands": [
          "monitor swo start 72000000 2250000"
        ],
        "preLaunchTask": "CMake: build",
        "svdPath": "${workspaceFolder}/device/config/SVD_file/STM32F303.svd"
      },

      {
        "name": "OpenOCD Debug",
        "request": "launch",
        "type": "cortex-debug",
        "cwd": "${workspaceFolder}",
        "executable": "${workspaceFolder}/bin/debug/bootloader.out",
        "loadFiles": [
          "${workspaceFolder}/bin/debug/bootloader.hex",
          "${workspaceFolder}/bin/debug/application.hex"
        ],
        "symbolFiles": [
          {"file": "${workspaceFolder}/bin/debug/bootloader.out"},
          {"file": "${workspaceFolder}/bin/debug/application.out"}
        ],
        "servertype": "openocd",
        "runToEntryPoint": "main",
        "showDevDebugOutput": "raw",
        "configFiles": [
          "board/stm32f3discovery.cfg"
        ],
        "preLaunchTask": "CMake: build",
        "svdPath": "${workspaceFolder}/device/config/SVD_file/STM32F303.svd"
      },

      {
        "name": "STLink Debug",
        "request": "launch",
        "type": "cortex-debug",
        "cwd": "${workspaceFolder}",
        "executable": "${workspaceFolder}/bin/debug/bootloader.out",
        "loadFiles": [
          "${workspaceFolder}/bin/debug/bootloader.hex",
          "${workspaceFolder}/bin/debug/application.hex"
        ],
        "symbolFiles": [
          {"file": "${workspaceFolder}/bin/debug/bootloader.out"},
          {"file": "${workspaceFolder}/bin/debug/application.out"}
        ],
        "servertype": "stlink",
        "runToEntryPoint": "main",
        "showDevDebugOutput": "raw",
        "preLaunchTask": "CMake: build",
        "svdPath": "${workspaceFolder}/device/config/SVD_file/STM32F303.svd"
      },
    ]
}